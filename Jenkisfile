pipeline {
    agent { label 'master' }
    stages {
        stage('CI') {
            steps {
               docker build. -t hellonode
		docker login -u ${docker_username} -p ${docker_pass}
		docker push Arwa98/hellonode:latest
            }
        }
        stage('CD') {
            steps {
		docker login -u ${docker_username} -p ${docker_pass}
		docker run -p 3000:3000 -d hellonode

		
            }
        }
    }
}













